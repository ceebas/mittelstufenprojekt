include ./layout/head.jade
script(src='js/jscolor/jscolor.js')
body
	.container
		include ./layout/nav.jade
		.panel.panel-default
			.panel-heading 
				h3 Erstelle nun dein Spiel
			form(role='form', action='/createGame', method='post')

				//Spieloptionen
				input#gamename.form-control(type='text', name='game_name', placeholder='Name des Spiels')
				input#description.form-control(type='text', name='game_description', placeholder='Beschreibung des Spiels')

				input#direction_horizontal(type='radio', name='scroll_direction', value='horizontal', checked='checked')
				| horizontal Scroller 
				input#direction_vertical(type='radio', name='scroll_direction', value='vertical')
				| vertikal Scroller 
				br
				input#selfscroll(type='checkbox', name='selfscroll', value='true', onchange='showDiv("selfscroll")')
				| Selbstscroller
				//Wenn selbsscroller dann anzeigen
				div#scroll.hidden
					| Scrollgeschwindigkeit:
					span#scroll_speed_span /
					input#scroll_speed(type='range', name='scroll_speed', min='1', max='10', value='5', onchange='showValue(this.value, "scroll_speed")')

				//Borders

				//Top
				| Border Top
				input#border_top(type='checkbox', name='border_top', value='true')

				//Bottom
				| Border Bottom
				input#border_bottom(type='checkbox', name='border_bottom', value='true')

				//left
				| Border left
				input#border_left(type='checkbox', name='border_left', value='true')

				//Right
				| Border right
				input#border_right(type='checkbox', name='border_right', value='true')


				//PLayeroptionen
				h4 Spieler

				| Geschwindigkeit des Spielers:
				span#player_speed_span /
				input#player_speed(type='range', name='player_speed', min='1', max='10', value='5', onchange='showValue(this.value, "player_speed")')

				| Gravitation des Spielers:
				span#player_gravity_span /
				input#player_gravity(type='range', name='player_gravity', min='1', max='10', value='5', onchange='showValue(this.value, "player_gravity")')

				select#player_shape.form-control(name='player_shape', size='1', onchange='showDiv("player_shape")')
					option eckig
					option rund	
					option eigene Form hochladen (im nächsten Schritt)
				input#player_width.form-control(type='number', name='player_width', placeholder='Breite in px')
				input#player_height.form-control(type='number', name='player_height', placeholder='Höhe in px')
				input#player_color.form-control.color(type='text', name='player_color', placeholder='Farbe')


				// Schießen
				input#player_shoot_enable(type='checkbox', name='player_shoot_enabled', value='true', onchange='showDiv("shoot")')
				|  Schießen erlauben
				br

				//	Wenn an dann folgende werte zeigen
				div#shoot_enabled.hidden

					| Geschwindigkeit des Geschosses:
					span#shoot_speed_span /
					input#shoot_speed(type='range', name='shoot_speed', min='1', max='10', value='5', onchange='showValue(this.value, "shoot_speed")')

					input#shoot_color.form-control.color(type='text', name='player_shoot_color', placeholder='Farbe')
					select#shoot_shape.form-control(name='player_shoot_shape', size='1')
						option eckig
						option rund	
						option eigene Form hochladen (im nächsten Schritt)

				// Gegner optionen				
				h4 Gegner
				input#foes_enabled(type='checkbox', name='foes_enabled', value='true', onchange='showDiv("foes")')
				| existieren Gegner?

				div#foes_enabled.hidden
					select#foes_shape.form-control(name='foes_shape', size='1', onchange='showDiv("foes_shape")')
						option eckig
						option rund
						option eigene Form hochladen (im nächsten Schritt)	
					input#foes_width.form-control(type='number', name='foes_width', placeholder='Breite in px')
					input#foes_height.form-control(type='number', name='foes_height', placeholder='Hoehe in px')
					input#foes_color.form-control.color(type='text', name='foes_color', placeholder='Farbe')
					input#foes_active(type='checkbox', name='foes_active', value='true')
					| kann sich bewegen

					| Geschwindigkeit des Gegners:
					span#foes_speed_span /
					input#foes_speed(type='range', name='foes_speed', min='1', max='10', value='5', onchange='showValue(this.value, "foe_speed")')

					| Gravitation des Spielers:
					span#foes_gravity_span /
					input#foes_gravity(type='range', name='foes_gravity', min='1', max='10', value='5', onchange='showValue(this.value, "foe_gravity")')

				button#loginButton.btn.btn-lg.btn-primary.btn-block(type='submit') senden
	include ./layout/footer.jade

