include ./layout/head.jade
body
	.container
		include ./layout/nav.jade 
		.panel.panel-default
			.panel-heading 
				h2 Accout aktivieren
			.panel-body
				br
				-if(message != "")
					div.alert.alert-warning #{message} 
				form.form-signin(role='form', action='/activateUser', method='post')
					.input-group
						input#emailhash.hidden(name='emailhash', type='text', value='#{emailhash}', required='required', autocomplete='off', autofocus='autofocus', readonly='readonly')
						input#username.form-control(name='username', type='text', placeholder='Benutzername', required='required', autofocus='autofocus')
						input#password.form-control(name='password', type='password', placeholder='Passwort', required='required')
					button#loginButton.btn.btn-lg.btn-primary.btn-block(type='submit') Aktivieren
	include ./layout/footer.jade